{
    "name": "auropay/auropay",
    "version": "1.0.0",
    "description": "Auropay's Payment Gateway APIs provide developers with a streamlined pathway to integrate advanced payment processing capabilities into their applications, platforms and websites.",
    "keywords": [
        "php",
        "sdk",
        "rest",
        "api",
        "auropay",
        "payment gateway"
    ],
    "homepage": "https://auropay.net",
    "license": "MIT",
    "authors": [
        {
            "name": "Auropay",
            "email": "developer_payments@aurionpro.com"
        }
    ],
    "require": {
        "php": "^7.2 || ^8.0",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "guzzlehttp/guzzle": "^7.3",
        "guzzlehttp/psr7": "^1.7 || ^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0 || ^9.0"
    },
    "autoload": {
        "psr-4": {
            "Auropay\\": "lib/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Auropay\\Test\\": "test/"
        }
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
